Public Class Form1

    Private Sub Button1_Click(sender As System.Object, e As System.EventArgs) Handles Button1.Click
        Dim testmark As Integer
        Dim grade, msgbox, name As String
        TextBox2.Text = testmark
        grade = TextBox3.Text
        msgbox = TextBox4.Text
        name = TextBox1.Text

        name = InputBox("Please Insert Your Pupils Name Please", "name")
        testmark = InputBox("Please Insert Your Pupil's Testmark", "Testmark")
        If testmark < 50 Then
            grade = "D"
        End If
        If testmark >= 50 Then
            grade = "C"
        End If
    End Sub
End Class
